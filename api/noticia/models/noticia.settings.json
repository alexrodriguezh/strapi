{
  "kind": "collectionType",
  "collectionName": "noticias",
  "info": {
    "name": "Noticia"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "titulo": {
      "type": "string"
    },
    "contenido": {
      "type": "richtext"
    },
    "imagen": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categoria": {
      "model": "categoria"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
